{
    "version": 2,
    "builds": [
      {
        "src": "sliceit/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
      },
      {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "staticfiles_build"
        }
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/static/$1"
      },
      {
        "src": "/robots.txt",
        "dest": "/static/robots.txt"
      },
      {
        "src": "/site.webmanifest",
        "dest": "/static/site.webmanifest"
      },
      {
        "src": "/sitemap.xml",
        "dest": "/static/sitemap.xml"
      },
      {
        "src": "/(.*)",
        "dest": "sliceit/wsgi.py"
      }
    ]
  }
  